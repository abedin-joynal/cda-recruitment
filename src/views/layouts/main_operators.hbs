    /* Admit Card Styles */
    .admit-card {
        --ink: #111;
        --thin: #333;
        width: 210mm;
        max-height: 297mm;
        margin: 0 auto;
        background: #fff;
        padding: 8mm 12mm 10mm;
        font-family: "Noto Sans Bengali", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        color: var(--ink);
        font-size: 12px;
        box-sizing: border-box;
    }
    .admit-header-box {
        border: 2px solid var(--ink);
        padding: 8px 10px;
        text-align: center;
        position: relative;
        margin-bottom: 8px;
    }
    .admit-header-box .seal {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        margin: 0 auto 4px;
        object-fit: contain;
        display: block;
    }
    .admit-header-box .org {
        font-weight: 700;
        font-size: 16px;
        line-height: 1.2;
        margin: 0;
    }
    .admit-header-box .addr,
    .admit-header-box .web,
    .admit-header-box .exam {
        font-size: 11px;
        line-height: 1.3;
        margin: 1px 0;
    }
    .admit-header-box .title {
        margin-top: 6px;
        font-weight: 800;
        font-size: 15px;
        display: inline-block;
        padding: 3px 12px;
        border: 2px solid var(--ink);
    }
    .admit-main {
        display: grid;
        grid-template-columns: 1fr 38mm;
        gap: 10px;
        align-items: start;
        margin-top: 6px;
        margin-bottom: 8px;
    }
    .admit-field {
        display: grid;
        grid-template-columns: 40mm 1fr;
        gap: 6px;
        align-items: end;
        padding: 4px 0;
    }
    .admit-field .label {
        font-size: 11px;
        font-weight: 600;
        white-space: nowrap;
    }
    .admit-field .value {
        border-bottom: 1px solid var(--thin);
        min-height: 18px;
        font-size: 12px;
        padding: 0 4px 2px;
    }
    .admit-boxed {
        border: 2px solid var(--ink);
        padding: 6px 10px;
        margin-top: 8px;
    }
    .admit-boxed .admit-field:first-child { padding-top: 0; }
    .admit-boxed .admit-field:last-child { padding-bottom: 0; }
    .admit-photo {
        border: 2px solid var(--ink);
        height: 45mm;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fafafa;
        overflow: hidden;
    }
    .admit-photo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .admit-section-title {
        font-weight: 800;
        font-size: 13px;
        margin: 8px 0 4px;
        border-bottom: 2px solid var(--ink);
        display: inline-block;
        padding-bottom: 2px;
    }
    .admit-instructions {
        margin: 4px 0 0 18px;
        padding: 0;
        font-size: 11px;
        line-height: 1.45;
    }
    .admit-instructions li {
        margin: 3px 0;
    }
    .admit-footer {
        margin-top: 12px;
        display: flex;
        justify-content: flex-end;
    }
    .admit-sign {
        text-align: center;
        width: 55mm;
        font-size: 11px;
        line-height: 1.4;
    }
    .admit-sign .line {
        border-top: 1px solid var(--thin);
        margin-top: 18px;
        padding-top: 5px;
        font-weight: 600;
    }
    .admit-sign .muted {
        opacity: 0.85;
    }

    /* Print Styles - Fit on single A4 page */
    @media print {
        /* Hide everything except the admit card */
        body * {
            visibility: hidden;
        }
        .admit-card, .admit-card * {
            visibility: visible;
        }
        .admit-card {
            position: absolute;
            left: 0;
            top: 0;
            margin: 0;
            padding: 8mm 10mm 8mm;
            width: 210mm;
            max-height: 297mm;
            box-shadow: none;
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }
        /* Ensure no page breaks inside */
        .admit-card,
        .admit-header-box,
        .admit-main,
        .admit-instructions,
        .admit-footer {
            page-break-inside: avoid;
            break-inside: avoid;
        }
        /* Compact styles for print */
        .admit-header-box {
            padding: 6px 8px;
            margin-bottom: 6px;
        }
        .admit-header-box .seal {
            width: 40px;
            height: 40px;
            margin-bottom: 3px;
        }
        .admit-header-box .org {
            font-size: 14px;
        }
        .admit-header-box .title {
            font-size: 13px;
            padding: 2px 10px;
            margin-top: 4px;
        }
        .admit-main {
            margin-top: 4px;
            margin-bottom: 6px;
            gap: 8px;
        }
        .admit-photo {
            height: 40mm;
        }
        .admit-field {
            padding: 3px 0;
        }
        .admit-field .label,
        .admit-field .value {
            font-size: 10px;
        }
        .admit-boxed {
            padding: 5px 8px;
            margin-top: 6px;
